<%- include('partials/_head') %>

<link rel="stylesheet" href="/css/perfil.css">
<link rel="stylesheet" href="/css/navbar.css">
<link rel="stylesheet" href="/css/footer.css">

<body>

  <div class="voltar-container">
    <button class="voltar" onclick="window.history.back()">
      <img src="/assets/setinha-cinza.svg" alt="Voltar" width="25" height="25">
    </button>
  </div>

  <%- include('partials/_navbar') %>

  <main class="perfil-container">
    <div id="perfil-root"></div> 

    <script>
      const usuarioData = localStorage.getItem('usuario');
      window.__PERFIL_PROPS__ = {
        token: localStorage.getItem('token'),
        usuario: usuarioData ? JSON.parse(usuarioData) : null,
      };
    </script>
  </main>

  <%- include('partials/_footer') %>

  <script src="/js/categorias.js"></script>
  <script src="/js/navbar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>

  <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>

  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script> 

  <script type="text/babel" src="/js/perfil-react.js"></script>
  <script src="/js/perfil-react.js"></script> 

</body>
</html>